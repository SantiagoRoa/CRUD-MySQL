<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            ID
                        </th>
                        <th>
                            Tipo
                        </th>
                        <th>
                            Placa
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Modelo
                        </th>
                        <th>
                            A単o
                        </th>
                        <th>
                            Uso
                        </th>
                        <th>
                            ID Tomador
                        </th>
                        <th>
                            Acciones
                        </th>
                </thead>
                <tbody>
                    <% if(data) {
                        for (var i=0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <%= (i+1) %>
                        </td>
                        <td>
                            <%= data[i].idVehiculo%>
                        </td>
                        <td>
                            <%= data[i].tipoVehiculo%>
                        </td>
                        <td>
                            <%= data[i].placa%>
                        </td>
                        <td>
                            <%= data[i].marca%>
                        </td>
                        <td>
                            <%= data[i].modelo%>
                        </td>
                        <td>
                            <%= data[i].a単o%>
                        </td>
                        <td>
                            <%= data[i].uso%>
                        </td>
                        <td>
                            <%= data[i].Tomador_idDocTomador%>
                        </td>
                        <td>
                            <a href="/delete-vehiculo/<%= data[i].idVehiculo%>" class="btn btn-danger">
                                Borrar
                            </a>
                            <a href="/update-vehiculo/<%= data[i].idVehiculo%>" class="btn btn-warning">
                                Actualizar
                            </a>
                        </td>
                    </tr>
                    <%  }
                    } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/insert-vehiculo" method="post">
                        <div class="form-group ">
                            <input type="text" name="idVehiculo" value="" placeholder="ID" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="tipoVehiculo" value="" placeholder="Tipo" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="placa" value="" placeholder="Placa" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="marca" value="" placeholder="Marca" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="modelo" value="" placeholder="Modelo" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="a単o" value="" placeholder="A単o" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="uso" value="" placeholder="Uso" class="form-control">
                        </div>
                        <div class="form-group ">
                            <input type="text" name="Tomador_idDocTomador" value="" placeholder="ID Tomador" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">
                            Guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('partials/_footer') %>