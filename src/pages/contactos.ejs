<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            ID
                        </th>
                        <th>
                            Documento Persona
                        </th>
                        <th>
                            Tipo ID
                        </th>
                        <th>
                            Valor
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) {
                        for (var i=0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <%= (i+1) %>
                        </td>
                        <td>
                            <%= data[i].id%>
                        </td>
                        <td>
                            <%= data[i].doc_persona%>
                        </td>
                        <td>
                            <%= data[i].id_tipo%>
                        </td>
                        <td>
                            <%= data[i].valor%>
                        </td>
                        <td>
                            <a href="/delete-contacto/<%= data[i].id%>" class="btn btn-danger">
                                Borrar
                            </a>
                            <a href="/update-contacto/<%= data[i].id%>" class="btn btn-warning">
                                Actualizar
                            </a>
                        </td>
                    </tr>
                    <%  }
                    } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/insert-contacto" method="post">
                        <div class="form-group ">
                            <input type="text" name="id"  placeholder="ID" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="doc_persona"  placeholder="Documento Persona" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_tipo"  placeholder="ID Contacto" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="valor"  placeholder="Valor" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">
                            Guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('partials/_footer') %>